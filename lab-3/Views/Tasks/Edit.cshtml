@model lab_3.Models.Task

<h1>Редактировать задачу</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Title">Название задачи</label>
        <input type="text" class="form-control" asp-for="Title" required />
    </div>
    <div class="form-group">
        <label for="AuthorId">Автор</label>
        <select class="form-control" asp-for="AuthorId" asp-items="ViewBag.Employees"></select>
    </div>
    <div class="form-group">
        <label for="ExecutorId">Исполнитель</label>
        <select class="form-control" asp-for="ExecutorId" asp-items="ViewBag.Employees"></select>
    </div>
    <div class="form-group">
        <label for="Status">Статус</label>
        <select class="form-control" asp-for="Status">
            <option value="ToDo">To Do</option>
            <option value="InProgress">In Progress</option>
            <option value="Done">Done</option>
        </select>
    </div>
    <div class="form-group">
        <label for="Priority">Приоритет</label>
        <input type="number" class="form-control" asp-for="Priority" required />
    </div>

    <div class="form-group">
        <label for="Comment">Комментарий</label>
        <textarea class="form-control" asp-for="Comment"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
</form>

<a href="@Url.Action("Index", "Tasks")" class="btn btn-secondary">Назад</a>
