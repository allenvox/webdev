@model lab_3.Models.HomeViewModel

<h2>
    <a asp-controller="Projects" asp-action="Index">Проекты</a>
</h2>
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Компания-заказчик</th>
            <th>Компания-исполнитель</th>
            <th>Дата начала</th>
            <th>Дата окончания</th>
            <th>Приоритет</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model.Projects)
        {
            <tr>
                <td>@project.Name</td>
                <td>@project.CustomerCompany</td>
                <td>@project.ContractorCompany</td>
                <td>@project.StartDate.ToShortDateString()</td>
                <td>@project.EndDate?.ToShortDateString()</td>
                <td>@project.Priority</td>
                <td>
                    <a href="@Url.Action("Edit", "Projects", new { id = project.Id })">Редактировать</a> |
                    <a href="@Url.Action("Details", "Projects", new { id = project.Id })">Просмотр</a> |
                    <form asp-controller="Projects" asp-action="Delete" asp-route-id="@project.Id" method="post"
                        style="display:inline;">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create", "Projects")" class="btn btn-primary">Добавить проект</a>
<br><br><br>

<h2>
    <a asp-controller="Employees" asp-action="Index">Сотрудники</a>
</h2>
<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Email</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Email</td>
                <td>
                    <a href="@Url.Action("Edit", "Employees", new { id = employee.Id })">Редактировать</a> |
                    <a href="@Url.Action("Details", "Employees", new { id = employee.Id })">Просмотр</a> |
                    <form asp-controller="Employees" asp-action="Delete" asp-route-id="@employee.Id" method="post"
                        style="display:inline;">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create", "Employees")" class="btn btn-primary">Добавить сотрудника</a>
<br><br><br>

<h2>
    <a asp-controller="Tasks" asp-action="Index">Задачи</a>
</h2>
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Автор</th>
            <th>Исполнитель</th>
            <th>Статус</th>
            <th>Приоритет</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.Tasks)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Author.FirstName @task.Author.LastName</td>
                <td>@task.Executor?.FirstName @task.Executor?.LastName</td>
                <td>@task.Status</td>
                <td>@task.Priority</td>
                <td>
                    <a href="@Url.Action("Edit", "Tasks", new { id = task.Id })">Редактировать</a> |
                    <a href="@Url.Action("Details", "Tasks", new { id = task.Id })">Просмотр</a> |
                    <form asp-controller="Tasks" asp-action="Delete" asp-route-id="@task.Id" method="post"
                        style="display:inline;">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create", "Tasks")" class="btn btn-primary">Создать задачу</a>
