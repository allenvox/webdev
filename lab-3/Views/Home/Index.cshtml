@model lab_3.Models.HomeViewModel

<h1>Главная страница</h1>

<h2>Проекты</h2>
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Компания-заказчик</th>
            <th>Компания-исполнитель</th>
            <th>Дата начала</th>
            <th>Дата окончания</th>
            <th>Приоритет</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model.Projects)
        {
            <tr>
                <td>@project.Name</td>
                <td>@project.CustomerCompany</td>
                <td>@project.ContractorCompany</td>
                <td>@project.StartDate.ToShortDateString()</td>
                <td>@project.EndDate?.ToShortDateString() ?? "Не завершено"</td>
                <td>@project.Priority</td>
                <td>
                    <a href="@Url.Action("Edit", "Projects", new { id = project.Id })">Редактировать</a> |
                    <a href="@Url.Action("Details", "Projects", new { id = project.Id })">Просмотр</a> |
                    <a href="@Url.Action("Delete", "Projects", new { id = project.Id })">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create", "Projects")" class="btn btn-primary">Добавить проект</a>

<h2>Сотрудники</h2>
<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Email</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Email</td>
                <td>
                    <a href="@Url.Action("Edit", "Employees", new { id = employee.Id })">Редактировать</a> |
                    <a href="@Url.Action("Details", "Employees", new { id = employee.Id })">Просмотр</a> |
                    <a href="@Url.Action("Delete", "Employees", new { id = employee.Id })">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create", "Employees")" class="btn btn-primary">Добавить сотрудника</a>

<h2>Задачи</h2>
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Автор</th>
            <th>Исполнитель</th>
            <th>Статус</th>
            <th>Приоритет</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.Tasks)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Author.FirstName @task.Author.LastName</td>
                <td>@task.Executor?.FirstName @task.Executor?.LastName ?? "Не назначено"</td>
                <td>@task.Status</td>
                <td>@task.Priority</td>
                <td>
                    <a href="@Url.Action("Edit", "Tasks", new { id = task.Id })">Редактировать</a> |
                    <a href="@Url.Action("Details", "Tasks", new { id = task.Id })">Просмотр</a> |
                    <a href="@Url.Action("Delete", "Tasks", new { id = task.Id })">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create", "Tasks")" class="btn btn-primary">Создать задачу</a>
