@model IEnumerable<lab_3.Models.Project>

<h1>Список проектов</h1>

<table class="table">
    <thead>
        <tr>
            <th>Название проекта</th>
            <th>Компания-заказчик</th>
            <th>Компания-исполнитель</th>
            <th>Дата начала</th>
            <th>Дата окончания</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Name</td>
                <td>@project.CustomerCompany</td>
                <td>@project.ContractorCompany</td>
                <td>@project.StartDate.ToString("MM/dd/yyyy")</td>
                <td>@project.EndDate?.ToString("MM/dd/yyyy") ?? "Не завершено"</td>
                <td>
                    <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-info">Детали</a>
                    <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-warning">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Создать проект</a>
