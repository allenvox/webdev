@model lab_3.Models.Project

<h2>Проект: @Model.Name</h2>

<p>Компания-заказчик: @Model.CustomerCompany</p>
<p>Компания-исполнитель: @Model.ContractorCompany</p>
<p>Дата начала: @Model.StartDate.ToShortDateString()</p>
<p>Дата окончания: @Model.EndDate?.ToShortDateString()</p>

<h3>Сотрудники</h3>
<ul>
    @if (Model.Employees != null && Model.Employees.Any())
    {
        foreach (var employee in Model.Employees)
        {
            <li>@employee.FirstName @employee.LastName</li>
        }
    }
    else
    {
        <li>Сотрудников нет.</li>
    }
</ul>

<a asp-action="AddEmployee" asp-route-id="@Model.Id" class="btn btn-primary">Добавить сотрудника</a>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Редактировать проект</a>
<a asp-action="Index" class="btn btn-secondary">Назад к списку проектов</a>
